<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/iv_head"
                android:src="@mipmap/launcher"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nickname"
                    android:text="修勾"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: "
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_id"
                        android:text="123456"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:src="@drawable/ic_home_black_24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home_black_24dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="#0000"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signature"
            android:text="跟我一起关注毛孩子。"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my_follow"
                    android:text="66"
                    android:clickable="true"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="15sp"
                    android:paddingBottom="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my_fans"
                    android:text="7.3"
                    android:clickable="true"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="15sp"
                    android:paddingBottom="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my_collected"
                    android:text="56.4"
                    android:clickable="true"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获赞与收藏"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="10sp"
                    android:paddingBottom="30dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_change_info"
                android:text="编辑资料"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:clickable="true"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ib_setting"
                android:background="#0000"
                android:src="@drawable/ic_baseline_settings_24"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1">
                <ImageButton

                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/ib_my_creation"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_create_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的创作"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/ib_my_course"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_dashboard_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的课程"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/ib_my_collection"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_star_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/ib_browse_records"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_access_time_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浏览记录"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="常见工具"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_personal"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_person_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_consult"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_call_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_encyclopedias"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_menu_book_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="百科"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_customer_service"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_question_answer_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_shopping"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_shopping_cart_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_notice"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_notifications_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通知"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_data"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_cloud_download_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资料"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/ib_difficult"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_help_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="疑难"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>